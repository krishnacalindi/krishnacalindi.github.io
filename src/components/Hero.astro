      siteConfig.social?.orcid && (
        <a
          href={siteConfig.social.orcid}
          target="_blank"
          rel="noopener noreferrer"
          aria-label="ORCID"
          class="transition-colors duration-300 hover:text-[var(--accent-color)]"
        >
          <svg
            fill="#ffffff"
            width="24"
            height="24"
            viewBox="0 0 32 32"
            xmlns="http://www.w3.org/2000/svg"
